CRYPTOBUDDY STRUCTURE

import pandas as pd

# crypto_data = pd.read_csv('crypto_data.csv')

class CryptoChatbot:
    def __init__(self):
        self.crypto_data = None

    def load_data(self, data):
        self.crypto_data = data

    def analyze_profitability(self, crypto_name):
        # Analyze price trends and profitability
        crypto_data = self.crypto_data[self.crypto_data['Name'] == crypto_name]
        if crypto_data['Price_Change'].values[0] > 0:
            return f"{crypto_name} has a positive price trend, indicating potential profitability."
        else:
            return f"{crypto_name} has a negative price trend, indicating potential losses."

    def analyze_sustainability(self, crypto_name):
        # Analyze energy efficiency and project viability
        crypto_data = self.crypto_data[self.crypto_data['Name'] == crypto_name]
        if crypto_data['Energy_Efficiency'].values[0] > 0.5:
            return f"{crypto_name} has a high energy efficiency, indicating sustainability."
        else:
            return f"{crypto_name} has a low energy efficiency, indicating potential sustainability concerns."

    def provide_investment_advice(self, crypto_name):
        profitability_analysis = self.analyze_profitability(crypto_name)
        sustainability_analysis = self.analyze_sustainability(crypto_name)
        if "positive" in profitability_analysis and "high" in sustainability_analysis:
            return f"Based on our analysis, {crypto_name} appears to be a profitable and sustainable investment opportunity."
        elif "negative" in profitability_analysis or "low" in sustainability_analysis:
            return f"Based on our analysis, {crypto_name} may not be a suitable investment opportunity due to concerns about profitability or sustainability."
        else:
            return f"Our analysis indicates that {crypto_name} has mixed results. Further research is recommended."

def main():
    chatbot = CryptoChatbot()
    # Load your dataset here
    # chatbot.load_data(crypto_data)

    while True:
        user_input = input("Enter the name of a cryptocurrency or 'exit' to quit: ")
        if user_input.lower() == 'exit':
            break
        else:
            print(chatbot.provide_investment_advice(user_input))

if __name__ == "__main__":
    main()
